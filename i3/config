##----- Definitions -----##

  set $mod Mod4

  set $green    #81db2e
  set $red      #ff6961
  set $bgcolor  #1c1f20
  set $bgpale   #545963
  set $grey     #777777
  set $blue     #24245c

  font pango:Iosevka 11

  set $workspace1 "1: [DESKTOP]"
  set $workspace2 "2: [INTERNET]"
  set $workspace3 "3: [TERMINAL]"
  set $workspace4 "4: [EDITOR]"
  set $workspace5 "5: [MISC]"
  set $workspace6 "6: [MISC]"
  set $workspace7 "7: [MISC]"
  set $workspace8 "8: [MISC]"
  set $workspace9 "9: [GAME]"
  set $workspace10 "10: [MUSIC]"

  set $terminal "xfce4-terminal"
  set $browser "firefox"
  set $editor "atom"
  set $spotlight "rofi -show run -font \\"Iosevka 12\\" -theme .config/rofi/arc-dark"

  ##----- Launchers -----##
  bindsym $mod+Return exec --no-startup-id $terminal
  bindsym $mod+a exec --no-startup-id atom
  bindsym $mod+t exec --no-startup-id thunar
  bindsym $mod+f exec --no-startup-id GTK_THEME=Adwaita firefox
  bindsym $mod+c exec --no-startup-id chromium
  bindsym $mod+s exec --no-startup-id spotify
  bindsym $mod+space exec --no-startup-id $spotlight

  ##----- Autostart -----##
  exec --no-startup-id unclutter --timeout 2 --ignore-scrolling &

##----- Window navigation -----##
  bindsym $mod+q kill

  bindsym $mod+j exec i3-msg border pixel 1; focus left
  bindsym $mod+k exec i3-msg border pixel 1; focus down
  bindsym $mod+i exec i3-msg border pixel 1; focus up
  bindsym $mod+l exec i3-msg border pixel 1; focus right
  bindsym --release $mod+j exec i3-msg border pixel 0
  bindsym --release $mod+k exec i3-msg border pixel 0
  bindsym --release $mod+i exec i3-msg border pixel 0
  bindsym --release $mod+l exec i3-msg border pixel 0

  bindsym $mod+Shift+j move left
  bindsym $mod+Shift+k move down
  bindsym $mod+Shift+i move up
  bindsym $mod+Shift+l move right

  bindsym $mod+Control+j resize shrink width 10 px or 10 ppt
  bindsym $mod+Control+k resize grow height 10 px or 10 ppt
  bindsym $mod+Control+i resize shrink height 10 px or 10 ppt
  bindsym $mod+Control+l resize grow width 10 px or 10 ppt

  bindsym $mod+h split h
  bindsym $mod+v split v

  bindsym $mod+equal  gaps inner all plus 20
  bindsym $mod+minus gaps inner all minus 20
  bindsym $mod+Shift+equal  gaps outer all plus 20
  bindsym $mod+Shift+minus gaps outer all minus 20

  bindsym $mod+1 workspace $workspace1
  bindsym $mod+2 workspace $workspace2
  bindsym $mod+3 workspace $workspace3
  bindsym $mod+4 workspace $workspace4
  bindsym $mod+5 workspace $workspace5
  bindsym $mod+6 workspace $workspace6
  bindsym $mod+7 workspace $workspace7
  bindsym $mod+8 workspace $workspace8
  bindsym $mod+9 workspace $workspace9
  bindsym $mod+0 workspace $workspace10

  bindsym $mod+Shift+c reload      # reload config
  bindsym $mod+Shift+r restart     # restart i3
  bindsym $mod+shift+x exec ~/.xlocker/xlocker.sh
  bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'Log out?' -b 'Yes' 'i3-msg exit'"
  bindsym $mod+Shift+q exec "i3-nagbar -t error -m 'Shut down?' -b 'Yes' 'shutdown now'"

bar {
        position top
        status_command i3status
        strip_workspace_numbers yes
        tray_output none #primary
        separator_symbol "::"
        font pango:Iosevka 10
                colors {
                        separator             $grey
                        background            $bgcolor
                        focused_workspace     $bgcolor  $bgcolor  #FFFFFF
                        inactive_workspace    $bgcolor  $bgcolor  $grey
                        urgent_workspace      $bgcolor  $bgcolor  $grey
        }
}

##----- Aesthetics -----##
client.focused              $red        $red        $grey     $grey
client.focused_inactive     $bgpale     $bgpale     $grey     $grey
client.unfocused            $bgpale     $bgpale     $grey     $grey
hide_edge_borders both
exec_always feh --bg-scale ~/Pictures/wallpaper.jpg

##----- Gaps -----##
Gaps inner 25
Gaps outer 25
for_window [class="^.*"] border pixel 0

##----- Check focus-----##
bindsym $mod+semicolon exec i3-msg border pixel 1
bindsym --release $mod+semicolon exec i3-msg border pixel 0

##----- Pulseaudio -----##
bindsym $mod+period exec --no-startup-id pactl set-sink-volume 0 +5%
bindsym $mod+comma exec --no-startup-id pactl set-sink-volume 0 -5%
bindsym $mod+m exec --no-startup-id pactl set-sink-mute 0 toggle

bindsym $mod+Shift+period exec --no-startup-id pactl set-sink-volume 1 +5%
bindsym $mod+Shift+comma exec --no-startup-id pactl set-sink-volume 1 -5%
bindsym $mod+Shift+m exec --no-startup-id pactl set-sink-mute 1 toggle
